# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_ACCESS_TOKEN=your-supabase-access-token
SUPABASE_PROJECT_ID=your-project-id

# AI Provider Configuration
# Choose between 'anthropic' or 'openai' (default: 'anthropic')
AI_PROVIDER=anthropic

# Anthropic Claude AI API
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key

# OpenAI API (optional, if using OpenAI instead)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# Database URL
# Direct Connection (for introspection and migrations)
DATABASE_URL=postgresql://postgres:your-password@your-host:5432/postgres

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# Kakao OAuth
NEXT_PUBLIC_KAKAO_CLIENT_ID=your-kakao-client-id
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 뿌리오 SMS (선택 - SMS 사용시)
PPURIO_USERNAME=your-ppurio-username
PPURIO_API_KEY=your-ppurio-api-key
SENDER_PHONE=your-sender-phone

# 페이지 에디터 기본 모드 설정
NEXT_PUBLIC_EDITOR_DEFAULT=puck
